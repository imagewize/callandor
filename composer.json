{
  "name": "imagewize/callandor",
  "type": "wordpress-plugin",
  "description": "Pattern library for Sage 11 hybrid themes with Tailwind CSS and theme.json support",
  "keywords": [
    "wordpress",
    "plugin",
    "patterns",
    "blocks",
    "gutenberg",
    "sage",
    "tailwind",
    "block-patterns"
  ],
  "homepage": "https://github.com/imagewize/callandor",
  "license": "MIT",
  "authors": [
    {
      "name": "Jasper Frumau",
      "email": "jasper@imagewize.com",
      "homepage": "https://imagewize.com"
    }
  ],
  "support": {
    "issues": "https://github.com/imagewize/callandor/issues",
    "source": "https://github.com/imagewize/callandor"
  },
  "require": {
    "php": ">=8.2",
    "composer/installers": "^1.0 || ^2.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.0",
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.0"
  },
  "autoload": {
    "files": [
      "callandor.php"
    ]
  },
  "scripts": {
    "phpcs": "phpcs --standard=WordPress --extensions=php --ignore=vendor .",
    "phpcbf": "phpcbf --standard=WordPress --extensions=php --ignore=vendor .",
    "phpstan": "phpstan analyse --memory-limit=2G"
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "platform": {
      "php": "8.2"
    }
  }
}
